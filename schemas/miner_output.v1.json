{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MinerOutputV1",
  "description": "Output schema for the Unified Miner system extracting claims, jargon, people, and mental models",
  "type": "object",
  "required": ["claims", "jargon", "people", "mental_models"],
  "properties": {
    "claims": {
      "type": "array",
      "description": "Extracted claims from the content",
      "items": {
        "type": "object",
        "required": ["claim_text", "claim_type", "stance", "evidence_spans"],
        "properties": {
          "claim_text": {
            "type": "string",
            "description": "The precise claim statement",
            "minLength": 10
          },
          "claim_type": {
            "type": "string",
            "enum": ["factual", "causal", "normative", "forecast", "definition"],
            "description": "Type of claim being made"
          },
          "stance": {
            "type": "string",
            "enum": ["asserts", "questions", "opposes", "neutral"],
            "description": "Speaker's stance toward the claim"
          },
          "evidence_spans": {
            "type": "array",
            "description": "Supporting evidence from the text",
            "items": {
              "type": "object",
              "required": ["quote", "t0", "t1"],
              "properties": {
                "quote": {
                  "type": "string",
                  "description": "Exact quote from the text"
                },
                "t0": {
                  "type": "string",
                  "description": "Start timestamp in MM:SS or HH:MM:SS format",
                  "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
                },
                "t1": {
                  "type": "string",
                  "description": "End timestamp in MM:SS or HH:MM:SS format",
                  "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
                }
              }
            }
          }
        }
      }
    },
    "jargon": {
      "type": "array",
      "description": "Technical terms and domain-specific vocabulary",
      "items": {
        "type": "object",
        "required": ["term", "definition", "context_quote", "timestamp"],
        "properties": {
          "term": {
            "type": "string",
            "description": "The technical term or jargon"
          },
          "definition": {
            "type": "string",
            "description": "Brief definition of the term"
          },
          "context_quote": {
            "type": "string",
            "description": "Direct quote from the segment where the term is used"
          },
          "timestamp": {
            "type": "string",
            "description": "Timestamp in MM:SS or HH:MM:SS format",
            "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
          }
        }
      }
    },
    "people": {
      "type": "array",
      "description": "People mentioned in the content",
      "items": {
        "type": "object",
        "required": ["name", "context_quote", "timestamp"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the person mentioned"
          },
          "role_or_description": {
            "type": "string",
            "description": "Their role or how they're described"
          },
          "context_quote": {
            "type": "string",
            "description": "Quote showing how they're mentioned"
          },
          "timestamp": {
            "type": "string",
            "description": "Timestamp in MM:SS or HH:MM:SS format",
            "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
          }
        }
      }
    },
    "mental_models": {
      "type": "array",
      "description": "Frameworks, concepts, or approaches discussed",
      "items": {
        "type": "object",
        "required": ["name", "description", "context_quote", "timestamp"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the mental model or framework"
          },
          "description": {
            "type": "string",
            "description": "Explanation of the model/framework"
          },
          "context_quote": {
            "type": "string",
            "description": "Quote showing how it's discussed"
          },
          "timestamp": {
            "type": "string",
            "description": "Timestamp in MM:SS or HH:MM:SS format",
            "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
          }
        }
      }
    }
  }
}
