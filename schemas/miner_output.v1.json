{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unified Miner Output",
  "description": "Schema for unified extraction of claims, jargon, people, and mental models from content chunks",
  "type": "object",
  "properties": {
    "claims": {
      "type": "array",
      "description": "Extracted claims from the content",
      "items": {
        "type": "object",
        "properties": {
          "claim_text": {
            "type": "string",
            "description": "The exact claim being made (precise and concise)"
          },
          "claim_type": {
            "type": "string",
            "enum": ["factual", "causal", "normative", "forecast", "definition"],
            "description": "Type of claim"
          },
          "stance": {
            "type": "string",
            "enum": ["asserts", "questions", "opposes", "neutral"],
            "description": "How the speaker presents the claim"
          },
          "evidence_spans": {
            "type": "array",
            "description": "Supporting quotes with timestamps",
            "items": {
              "type": "object",
              "properties": {
                "quote": {
                  "type": "string",
                  "description": "Verbatim text supporting the claim"
                },
                "t0": {
                  "type": "string",
                  "description": "Start timestamp"
                },
                "t1": {
                  "type": "string",
                  "description": "End timestamp"
                }
              },
              "required": ["quote", "t0", "t1"]
            }
          }
        },
        "required": ["claim_text", "claim_type", "stance", "evidence_spans"]
      }
    },
    "jargon": {
      "type": "array",
      "description": "Technical terms and domain-specific language",
      "items": {
        "type": "object",
        "properties": {
          "term": {
            "type": "string",
            "description": "The jargon term or phrase"
          },
          "definition": {
            "type": "string",
            "description": "Explanation of the term in context"
          },
          "context_quote": {
            "type": "string",
            "description": "Quote showing how the term is used"
          },
          "timestamp": {
            "type": "string",
            "description": "When the term appears"
          }
        },
        "required": ["term", "definition", "context_quote", "timestamp"]
      }
    },
    "people": {
      "type": "array",
      "description": "People mentioned in the content",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Person's name as mentioned"
          },
          "role_or_description": {
            "type": "string",
            "description": "How they're described or their role"
          },
          "context_quote": {
            "type": "string",
            "description": "Quote mentioning the person"
          },
          "timestamp": {
            "type": "string",
            "description": "When they're mentioned"
          }
        },
        "required": ["name", "role_or_description", "context_quote", "timestamp"]
      }
    },
    "mental_models": {
      "type": "array",
      "description": "Conceptual frameworks, models, or ways of thinking",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name or title of the mental model"
          },
          "description": {
            "type": "string",
            "description": "Explanation of the mental model or framework"
          },
          "context_quote": {
            "type": "string",
            "description": "Quote illustrating the mental model"
          },
          "timestamp": {
            "type": "string",
            "description": "When it's discussed"
          }
        },
        "required": ["name", "description", "context_quote", "timestamp"]
      }
    }
  },
  "required": ["claims", "jargon", "people", "mental_models"]
}
