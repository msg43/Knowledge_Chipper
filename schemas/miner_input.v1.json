{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Miner Input Schema",
  "description": "Input schema for the unified miner processing a transcript segment",
  "type": "object",
  "properties": {
    "segment_id": {
      "type": "string",
      "description": "Unique identifier for the segment"
    },
    "speaker": {
      "type": "string",
      "description": "Speaker identifier for this segment"
    },
    "timestamp_start": {
      "type": "string",
      "description": "Start timestamp in HH:MM:SS.mmm format"
    },
    "timestamp_end": {
      "type": "string",
      "description": "End timestamp in HH:MM:SS.mmm format"
    },
    "text": {
      "type": "string",
      "description": "The transcript text content to process"
    }
  },
  "required": ["segment_id", "speaker", "timestamp_start", "timestamp_end", "text"]
}
