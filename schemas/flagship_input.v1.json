{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flagship Input Schema",
  "description": "Input schema for the flagship LLM evaluation of miner outputs",
  "type": "object",
  "properties": {
    "episode_id": {
      "type": "string",
      "description": "Unique identifier for the episode"
    },
    "episode_title": {
      "type": "string",
      "description": "Title of the episode being evaluated"
    },
    "claims": {
      "type": "array",
      "description": "Claims extracted by the miner to be evaluated",
      "items": {
        "type": "object",
        "properties": {
          "claim_text": {
            "type": "string",
            "description": "The exact claim being made"
          },
          "claim_type": {
            "type": "string",
            "enum": ["factual", "causal", "normative", "forecast", "definition"],
            "description": "Type of claim"
          },
          "stance": {
            "type": "string",
            "enum": ["asserts", "questions", "opposes", "neutral"],
            "description": "How the speaker presents the claim"
          },
          "evidence_spans": {
            "type": "array",
            "description": "Supporting quotes with timestamps",
            "items": {
              "type": "object",
              "properties": {
                "quote": {
                  "type": "string",
                  "description": "Verbatim text supporting the claim"
                },
                "t0": {
                  "type": "string",
                  "description": "Start timestamp"
                },
                "t1": {
                  "type": "string",
                  "description": "End timestamp"
                }
              },
              "required": ["quote", "t0", "t1"]
            }
          }
        },
        "required": ["claim_text", "claim_type", "stance", "evidence_spans"]
      }
    }
  },
  "required": ["episode_id", "episode_title", "claims"]
}
